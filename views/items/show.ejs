<%include ../layout/header %>
<%if(item==null){%>
<h1> item NOT found!!</h1>
<%}else{%>
    <h3> <%=item.name%> Info </h3>
    <form class="" action="/items" method="get">
      <table>
            <tr>
              <td>item name</td>  <td><%=item.name%></td>
            </tr>
            <tr>
              <td>item ID</td> <td><%=item.Id%></td>
            </tr>
            <tr>
              <td>product of the item</td> <td><%=item.product%></td>
            </tr>
            <tr>
              <td colspan="2"><input type="submit" value="Done ">
            </td>
            </tr>
      </table>
    </form>
<%}%>


