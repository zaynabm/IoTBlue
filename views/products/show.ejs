<%include ../layout/header %>
<%if(product==null){%>
<h1> Product NOT found!!</h1>
<%}else{%>
    <h3> <%=product.name%> Info </h3>
    <form class="" action="/products" method="get">
      <table>
            <tr>
              <td>product name</td>  <td><%=product.name%></td>
            </tr>
            <tr>
              <td>product ID</td> <td><%=product.Id%></td>
            </tr>
            <tr>
              <td>product company</td> <td><%=product.company%></td>
            </tr>
            <tr>
              <td>product description</td> <td><%=product.description%></td>
            </tr>
            <tr>
              <td colspan="2"><input type="submit" value="Done ">
            </td>
            </tr>
      </table>
    </form>
<%}%>


<style media="screen">
    td{
        padding: 10px;
        background-color:#c0cdea
    }
    th{
        padding: 10px;
        background-color: #899bc4
    }
</style>
